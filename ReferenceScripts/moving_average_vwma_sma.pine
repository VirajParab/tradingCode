//@version=3
study("VWMA/SMA Breakout Detector", overlay=true)
//                  INPUTS:
lenFastVWMA = input(13, title="Fast VWMA Length", minval=1)
lenSlowVWMA = input(26, title="Slow VWMA Length", minval=1)
lenFastSMA = input(13, title="Fast SMA Length", minval=1)
lenSlowSMA = input(26, title="Slow SMA Length", minval=1)
src = input(type=source, title="Source", defval=close)
fastSMA = sma(src, lenFastSMA)
slowSMA = sma(src, lenSlowSMA)
fastVWMA = vwma(src, lenFastVWMA)
slowVWMA = vwma(src, lenSlowVWMA)
s0 = plot(slowSMA, title="Slow SMA", color=red, linewidth=2)
v0 = plot(slowVWMA, title="Slow VWMA", color=green, linewidth=2)
s1 = plot(fastSMA, title="Fast SMA", color=fuchsia,linewidth=2, style=circles)
v1 = plot(fastVWMA, title="Fast VWMA", color=teal, linewidth=2, style=circles)
fill(s0, v0, color=slowSMA < slowVWMA ? green : red, transp=70)
fill(s1, v1, color=fastSMA < fastVWMA ? teal : fuchsia, transp=80)
